{
	"name": "react-formix",
	"version": "1.2.0",
	"description": "âš¡ Fast, convenient and easy. Build forms in React with pleasure",
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"module": "dist/react-formix.esm.js",
	"files": [
		"dist",
		"src"
	],
	"scripts": {
		"start": "tsdx watch --transpileOnly",
		"build": "tsdx build --transpileOnly && npm run build:types",
		"build:types": "tsc src/core/types.ts --declaration --emitDeclarationOnly --noEmit false --outDir dist",
		"test": "tsdx test --passWithNoTests",
		"lint": "tsdx lint",
		"prepare": "npm run build",
		"size": "size-limit",
		"analyze": "size-limit --why",
		"storybook": "start-storybook -p 6006",
		"build-storybook": "build-storybook"
	},
	"peerDependencies": {
		"mobx": ">=6.0.0",
		"react": ">=16.8.0"
	},
	"husky": {
		"hooks": {
			"pre-commit": "tsdx lint"
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/gduke3/formix.git"
	},
	"keywords": [
		"react",
		"mobx",
		"form",
		"forms",
		"hooks",
		"react hooks",
		"react form",
		"validation"
	],
	"author": "gduke3",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/gduke3/formix/issues"
	},
	"homepage": "https://github.com/gduke3/formix#readme",
	"size-limit": [
		{
			"path": "dist/react-formix.cjs.production.min.js",
			"limit": "10 KB"
		},
		{
			"path": "dist/react-formix.esm.js",
			"limit": "10 KB"
		}
	],
	"devDependencies": {
		"@babel/core": "^7.17.7",
		"@size-limit/preset-small-lib": "^7.0.8",
		"@storybook/addon-essentials": "^6.4.19",
		"@storybook/addon-info": "^5.3.21",
		"@storybook/addon-links": "^6.4.19",
		"@storybook/addons": "^6.4.19",
		"@storybook/react": "^6.4.19",
		"@types/react": "^17.0.40",
		"@types/react-dom": "^17.0.13",
		"babel-loader": "^8.2.3",
		"husky": "^7.0.4",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-is": "^17.0.2",
		"size-limit": "^7.0.8",
		"tsdx": "^0.14.1",
		"tslib": "^2.3.1",
		"typescript": "^4.6.2",
		"eslint": "^8.9.0",
		"eslint-config-react-app": "^7.0.0",
		"joi": "^17.6.0",
		"parcel": "^2.3.1",
		"yup": "^0.32.11"
	},
	"dependencies": {
		"@types/joi": "^17.2.3",
		"fastest-validator": "^1.12.0",
		"mobx-react-lite": "^3.2.3",
		"react-fast-compare": "^3.2.0"
	}
}
